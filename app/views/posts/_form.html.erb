 <% content_for :header do %>
<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
       Blog
      </h1>
    </div>
  </div>
</section>
<% end %>

<div class="section">
  
  <%= simple_form_for @post do |f| %>
  <div class="field">

    <div class="control">
       <%# if current_user && current_user.admin %>
      
    <%= f.input :title, input_html: {class: 'input'}, wrapper: false, label_html: {class: 'label'} %>

    </div>

</div>

<div class="field">
  
    <div class="control">
    
    <%= f.input :content, input_html: { class: 'textarea'}, wrapper:false, label_html: {class: 'label'} %>

    </div>
     <div class="field">
          <div class="control">
            <label class="label">Add images</label>
              <div class="file">
              <label class="file-label">
                <%= f.input :image, as: :file, input_html: { class:"file-input laptop-image" }, label: false, wrapper: false %>
                  <span class="file-cta">
                    <span class="file-icon"><i class="fa fa-upload"></i></span>
                    <span class="file-label">Choose a fileâ€¦</span>
                  </span>
              </label>
              </div>
            </div>
          </div>
          <output id="list"></output>

    </div>

        <%= f.button :submit, class: "button is-primary"  %>

<%# end %>
<% end %>

</div>