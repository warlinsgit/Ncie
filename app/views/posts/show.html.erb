<% content_for :header do %>
<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      
    </div>
  </div>
</section>
<% end %>

  <section class="hero is-info is-small is-bold">
        <div class="hero-body ">
            <div class="container has-text-centered">
                <h1 class="title"> <%= @post.title    %></h1>
            </div>
        </div>
    </section>

<section class="section">


		<nav class="level">
			<div class="level-left">

			</div>
			<% if user_signed_in? %>

			<div class="level-right">

				<p class="level-item">
					
					<% if post_author(@post) %>
				 <%= link_to "New Post", new_post_path(@post), class: "button" %>
			
				</p>

				
				<p class="level-item">
					

				 <%= link_to "Edit", edit_post_path(@post), class: "button is-info is-outlined" %>
			
				</p>

				<p class="level-item">

  					 
					<%=  link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure? " }, class: "button is-danger is-outlined"  %>
					 <% end %>

				</p>


				<p class="level-item">
					
				
				 <%= link_to "Back", posts_path, class: "button is-success is-outlined" %>
			
				</p>

			</div>

	    </nav>
		    <% end %>
		    	<div class="container">


		<div class="column is-8 is-offset-2 has-text-justified">

			

                    <%= image_tag(@post.image_url(:default)) %>

               
			 		<div class="tags has-addons level-item pv2">
                                   
                                    <span class="tag is-rounded is-info">Post by <%= @post.user.email.split('@').first %></span>     
                                    <span class="tag is-rounded"><%= @post.created_at.strftime("%B %d %Y, %l:%M%P") %></span>

                              
                    </div>   
                         
                
            		<div class="has-text-justified  ">
						<%= @post.content %> 
					</div>
           

		
</section>

<section class="section comments ">
	<div class="column is-8 is-offset-2 has-text-justified">
		
		<h2 class="subtitle is-5"><strong><%= @post.comments.count %></strong> Comments</h2>
		<%= render @post.comments %>

		<div class="comment-form">
			<hr />
			<h3 class="subtitle is-3">Leave a reply</h3>
			<%= render 'comments/form' %>

		</div>
	

</div>

</section>


